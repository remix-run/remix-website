{
  "extends": "../../tsconfig.json",
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "remix/component",
    "types": ["vite/client", "vitest/globals"],
    "paths": {
      "~/*": ["../*"]
    },
    "allowImportingTsExtensions": true,
    "rootDirs": ["."]
  }
}
