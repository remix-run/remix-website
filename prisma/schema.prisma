// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

model GitHubRef {
  // github ref refs/tags/v6.0.0 or refs/heads/main
  ref          String   @id
  // markdown processed release notes
  releaseNotes String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  // relations
  docs         Doc[]
}

model Doc {
  id           String    @id @default(cuid())
  filePath     String
  md           String
  html         String
  lang         String
  hasContent   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  // frontmatter attributes
  title        String
  order        Int?
  disabled     Boolean   @default(false)
  siblingLinks Boolean   @default(false)
  published    String?
  description  String?
  hidden       Boolean   @default(false)
  toc          Boolean   @default(true)
  // relations
  githubRef    GitHubRef @relation(fields: [githubRefId], references: [ref], onDelete: Cascade)
  githubRefId  String

  // unique filePath per githubRefId and lang
  @@unique([filePath, githubRefId, lang])
}

model BlogPost {
  slug      String   @id
  md        String
  html      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // frontmatter attributes
  title       String   @unique
  description String?
  published   Boolean? @default(false)
  hidden      Boolean? @default(false)
}
